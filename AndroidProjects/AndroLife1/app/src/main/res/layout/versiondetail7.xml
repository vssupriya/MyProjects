<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_below="@+id/tV2"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView"
            android:src="@drawable/icecream"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:id="@+id/tV2"
            android:text="ANDROID ICE CREAM SANDWICH 4.0
Some of the new additional features include: Data usage control, customised home screen, Android beam. API VERSIONS supported: API 14-15 "/>

        <Button
            android:id="@+id/bt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="linkme"
            android:text="CLICK HERE" />

    </RelativeLayout>
</ScrollView>